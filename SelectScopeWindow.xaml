<!-- SelectScopeWindow.xaml -->
<ui:FluentWindow x:Class="YourNamespace.SelectScopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Select Scope" Height="150" Width="250"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Select Scope"
            Grid.Row="0"
            HorizontalAlignment="Stretch"
        ></ui:TitleBar>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Do you want to modify the User or System Path?" Margin="10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <ui:Button Name="UserButton" Content="User" Width="100" Margin="10" Click="UserButton_Click"/>
                <ui:Button Name="SystemButton" Content="System" Width="100" Margin="10" Click="SystemButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</ui:FluentWindow>