<!-- SelectScopeWindow.xaml -->
<Window x:Class="YourNamespace.SelectScopeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Scope" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <TextBlock Text="Do you want to modify the User or System Path?" Margin="10"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Name="UserButton" Content="User" Width="100" Margin="10" Click="UserButton_Click"/>
            <Button Name="SystemButton" Content="System" Width="100" Margin="10" Click="SystemButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>